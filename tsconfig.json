{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "noEmit": false,
    "moduleResolution": "node",
    "isolatedModules": true,
    "composite": true,
    "allowJs": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "outDir": "./dist"
  },
  "exclude": [
    "node_modules",
    "dist",
    "craco.config.js",
    "**/*.stories.tsx",
    "**/*.test.*"
  ]
}
